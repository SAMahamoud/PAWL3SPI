{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{% block title %}Bibliotheque En Ligne{% endblock %}</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" />
		{% endblock %}
	</head>
	<body>
		<div class="container">
			<div id="header" class="hero-unit">
				<h1>La bibliothèque en ligne</h1>
				
			</div>
			<div class="row">
				<div id="menu" class="span3">
					<h3>La bibliotheque</h3>
					<ul class="nav nav-pills nav-stacked">
					<li><a href={"{{ path('bl_accueil') }}"}>Accueil de la bibliotheque</a></li>
					<li><a href={#"{{ path('bl_livre') }}"#}>Ajouter un Livre</a></li>
								
					</ul>

					{{ render(controller("BLBibliothequeEnLigneBundle:BibliothequeEnligne:menu", {'nombre': 3}))}}
				</div>
				<div id="content" class="span9">
					{% block body %}
					{% endblock %}
				</div>
			</div>
			<hr>
			<footer>
				<p>Copyright © SAID AHMED Mahamoud 2015.</p>
			</footer>
		</div>
		{% block javascripts %}
		{# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
		<script type="text/javascript" src="{{ asset('js/bootstrap.js')}}"></script>
		{% endblock %}
	</body>
</html>
